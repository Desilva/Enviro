@{
    Layout = null;
    ViewBag.Title = "Enviro - Graphics Location Sampling";
    
}
<div id="content-header">
	<h1>Graphics Location Sampling</h1>
</div>
<div id="breadcrumb">
	<a href="#" title="Go to Master Data" class="tip-bottom home"><i class="icon-home"></i> Master Data</a>
	<a href="#" class="current">Graphics Location Sampling</a>
</div>
<div class="container-fluid">
    <div class="row-fluid">
            <div class="span12">
                <div class="widget-box">
		            <div class="widget-title">
			            <span class="icon">
				            <i class="icon-align-justify"></i>									
			            </span>
			            <h5>Graphics Location Sampling</h5>
		            </div>
		            <div class="widget-content nopadding">
                        <div id="grid-graphics-lokasi" class="span12"></div>
		            </div>
                </div>
            </div>
        </div>
</div>
<script>
    var types = [];
    loadTypes();
    $(document).ready(function () {
        var crudServiceBaseUrl = "GraphicsLokasi",
            dataSource = new kendo.data.DataSource({
                transport: {
                    read: {
                        url: crudServiceBaseUrl + "/Binding",
                        type: "POST"
                    },
                    update: {
                        url: crudServiceBaseUrl + "/Edit",
                        type: "POST"
                    },
                    destroy: {
                        url: crudServiceBaseUrl + "/Delete",
                        type: "POST"
                    },
                    create: {
                        url: crudServiceBaseUrl + "/Create",
                        type: "POST"
                    },
                    parameterMap: function (options, operation) {
                        if (operation !== "read" && options.models) {
                            var result = {};

                            for (var i = 0; i < options.models.length; i++) {
                                var product = options.models[i];

                                for (var member in product) {
                                    if (member == "graphic_type") {
                                        result["models[" + i + "].type"] = product[member].id;
                                    } else {
                                        result["models[" + i + "]." + member] = product[member];
                                    }
                                }
                            }

                            return result;
                        }
                    }
                },
                batch: true,
                pageSize: 30,
                schema: {
                    model: {
                        id: "id",
                        fields: {
                            id: { editable: false },
                            lokasi_sampling1: {type:"string"},
                            type: {type:"number"}
                        }
                    }
                },
                pageSize: 10
            });

        $("#grid-graphics-lokasi").kendoGrid({
            dataSource: dataSource,
            pageable: true,
            sortable: true,
            filterable: true,
            toolbar: ["create"],
            columns: [
                { field: "lokasi_sampling1", title: "Sampling Location", width: 200 },
                {
                    field: "type",
                    title: "Graphics",
                    filterable: {
                        ui: typeFilter,
                        operators: {
                            number: {
                                eq: "Is equal to",
                                neq: "Is not equal to"
                            }
                        },
                        extra: false,
                    },
                    editor: typeDropDownEditor,
                    template: "#= getGraphicType(type) #",
                    
                },
                {
                    command: ["edit", "destroy"],
                    width: 192
                }
            ],
            editable: "inline",
            height: 400
        });

        function typeDropDownEditor(container, options) {
            $('<input required data-text-field="name" data-value-field="id" data-bind="value:' + options.field + '"/>')
                .appendTo(container)
                .kendoDropDownList({
                    autoBind: true,
                    dataSource: {
                        transport: {
                            dataType: "json",
                            read: crudServiceBaseUrl + "/BindingType"
                        }
                    }
                });
        }

        function typeFilter(element) {
            element.kendoDropDownList({
                dataTextField: "name",
                dataValueField: "id",
                dataSource: {
                    transport: {
                        dataType: "json",
                        read: crudServiceBaseUrl + "/BindingType"
                    }
                },
                optionLabel: "--Select Value--",
            });
        }

        unload();
    });

    function getGraphicType(type) {
        for (var i = 0, length = types.length; i < length; i++) {
            if (types[i].id == type) {
                return types[i].name;
            }
        }
    }

    function loadTypes() {
        $.ajax({
            url: "GraphicsLokasi/BindingType",
            type: 'get',
            dataType: 'json',
            data: {},
            success: function (data) {
                if (data) {
                    for (var a in data) {
                        types.push(data[a]);
                    }
                }
            }
        });
    }
</script>